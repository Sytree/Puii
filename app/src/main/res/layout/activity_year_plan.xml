<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.activity.YearPlanActivity"
    android:background="@color/mainBackground">
    <TextView
        android:id="@+id/main_title_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/mainTitle"
        android:text="@string/add_new_plan_plan"
        />
    <TextView
        android:id="@+id/sub_title_plan"
        android:layout_below="@id/main_title_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/subTitle"
        android:text="2016"/>
    <TextView
        android:id="@+id/new_plan_plan_main_cutline"
        style="@style/main_cutline"
        android:layout_below="@id/sub_title_plan"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_plan_plan_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/list_content"
        android:layout_below="@id/new_plan_plan_main_cutline"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
